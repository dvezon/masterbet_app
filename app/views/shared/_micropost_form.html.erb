<%= form_for @micropost, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Εισάγετε τίτλο για το άρθρο σας..." %>
  </div>
  <div class="field">
  <%= f.text_area :text, placeholder: "Εισάγετε κείμενο για το άρθρο σας..." %>
      </div>
  <div class="field">
  <p>
  	<strong>Εισαγωγή εικόνας: </strong><%= f.file_field :image %>
  </p>
  </div>
  <div class="field">	
  	<p>Κατηγορία Δημοσίευσης:
  	<%= f.select :category, [['Ειδήσεις','news'],['Events','events'],['Blog','blog']] %></p>
  </div>
  
  <%= f.submit "Ανάρτηση", class: "btn btn-large btn-primary" %>
<% end %>