<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Εισάγετε νέο σχόλιο..." %>
  </div>
  <div class="field">
  	<%= f.file_field :image %>
  </div>
  <%= f.submit "Ανάρτηση", class: "btn btn-large btn-primary" %>
<% end %>