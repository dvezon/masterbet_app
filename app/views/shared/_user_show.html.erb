<% provide(:title, @user.name ) %>
<div class="form-signin">
<div class="top">
	<h1><%= @user.name %></h1> 
	<%= @user.email %>
	<div class="span8">
    	<% if @user.microposts.any? %>
      		<h3>Microposts (<%= @user.microposts.count %>)</h3>
      		<ol class="microposts">
        	<%= render @microposts %>
      		</ol>
      		<%= will_paginate @microposts %>
    	<% end %>
  	</div>
    <% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <%= link_to "Γραφτείτε για να συμμετάσχετε!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>
</div>
</div>