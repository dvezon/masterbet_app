
  <li align=left id="<%= feed_item.id %>" class="feed">
    <div class="content"><%= wrap(feed_item.content) %></div>  
      <% if feed_item.image_url != nil %>
        <img hidden class="avatar" src=<%= feed_item.image_url(:thumb).to_s %> alt="Avatar">
        <canvas class="myCanvas" width="400" height="200" style="border:1px "></canvas>
      <% end %>
      <span class="timestamp">
        Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
      </span>
      <% if current_user?(feed_item.user) %>
        <%= link_to "Διαγραφή σχολίου", feed_item, method: :delete,
                                     data: { confirm: "Είστε σίγουρος για την διαγραφή του σχολίου;" },
                                     title: feed_item.content %>
      <% end %>

  </li>